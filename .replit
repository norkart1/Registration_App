run = "cowsay Configure me!"
entrypoint = "README.md"
modules = ["nodejs-20"]

[nix]
channel = "stable-25_05"
packages = ["cowsay", "unzip"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "registration-app-web"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "registration-server"

[[workflows.workflow]]
name = "registration-app-web"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd registration-app && npx expo start --web --port 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "registration-server"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd Serverregistration-main && npm start"
waitForPort = 3001

[[ports]]
localPort = 3001
externalPort = 3001

[userenv]

[userenv.shared]
APPWRITE_PROJECT_ID = "6954ec90001bab0ac184"
APPWRITE_ENDPOINT = "https://sgp.cloud.appwrite.io/v1"
